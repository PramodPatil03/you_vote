<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    android:background="#FFBAE4EB"
    android:overScrollMode="never"
    tools:context=".App_Modules">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/img_2"
                android:background="#74AEA7"
                android:onClick="goBack"
                />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="App Modules"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:background="@drawable/text_background"
        android:gravity="center_vertical"
        android:textStyle="bold"
        />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=">>Home Screen"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/black"

            android:background="@drawable/textbackground"
            />
        <TextView
            android:id="@+id/home_module_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"

            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:textSize="20dp"
            android:background="@drawable/textbackground2"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=">>Navigation Drawer"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:background="@drawable/textbackground"
            />
        <TextView
            android:id="@+id/navigation_module_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""

            android:textColor="@color/black"
            android:background="@drawable/textbackground2"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=">>Officer Login Screen"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/textbackground"
            android:textSize="30dp"
            />
        <TextView
            android:id="@+id/officer_Login_module_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:background="@drawable/textbackground2"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=">>Voters Screen"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="@drawable/textbackground"
                android:textSize="30dp"
                />
            <TextView
                android:id="@+id/voting_module_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:background="@drawable/textbackground2"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:textSize="20dp"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=">>Admin Login Screen"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/textbackground"
            android:textSize="30dp"
            />
        <TextView
            android:id="@+id/admin_login_module_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:background="@drawable/textbackground2"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=">>Admin Page Screen"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/textbackground"
            android:textSize="30dp"
            />
        <TextView
            android:id="@+id/admin_page_module_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:background="@drawable/textbackground2"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:textSize="20dp"
            />
    </LinearLayout>
    </LinearLayout>
</ScrollView>