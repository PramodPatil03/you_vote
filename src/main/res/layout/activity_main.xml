<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:background="@drawable/background"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            >


            <EditText
                android:id="@+id/epicNum"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:hint="Enter your Epic here"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:background="@drawable/inputback"
                android:paddingLeft="15dp"
                />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/checkBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/voteback"
                    android:text="Check"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
        </LinearLayout><LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        >

        <EditText
            android:id="@+id/Number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your Mobile num here"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:background="@drawable/inputback"
            android:paddingLeft="15dp"
            />
    </LinearLayout>
<RadioGroup
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

            <RadioButton
                android:id="@+id/chOne"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Party 1"
                android:background="@drawable/button_bg_color"
                android:textSize="25dp"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:textColor="@color/black"
                />


            <RadioButton
                android:id="@+id/chTwo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Party 2"
                android:textSize="25dp"
                android:background="@drawable/button_bg_color"
                android:textColor="@color/black"
                android:layout_marginTop="25dp"
                android:gravity="center"
                />


            <RadioButton
                android:id="@+id/chThree"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Party 3"
                android:textSize="25dp"
                android:background="@drawable/button_bg_color"
                android:textColor="@color/black"
                android:layout_marginTop="25dp"
                android:gravity="center"
                />

            <RadioButton
                android:id="@+id/chFour"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Party 4"
                android:textSize="25dp"
                android:background="@drawable/button_bg_color"
                android:layout_marginTop="25dp"
                android:textColor="@color/black"
                android:gravity="center"
                />
    <RadioButton
        android:id="@+id/chNota"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="NOTA"
        android:textSize="25dp"
        android:background="@drawable/button_bg_color"
        android:layout_marginTop="25dp"
        android:textColor="@color/black"
        android:gravity="center"
        />

        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:padding="10dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Vote"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="25dp"
                android:background="@drawable/voteback"
                android:text="Vote"
                android:textColor="@color/black"
                android:layout_gravity="center"
                />


        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</ScrollView>