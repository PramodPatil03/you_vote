<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"></corners>
            <gradient  android:startColor="#F5EFC2" android:centerColor="#F9E652" android:endColor="#F5EFC2" android:type="radial" android:gradientRadius="500dp"></gradient>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient  android:startColor="@color/white" android:centerColor="#999793" android:endColor="@color/white" android:type="radial" android:gradientRadius="500dp"></gradient>

            <corners android:radius="20dp"></corners>
        </shape>
    </item>
<item android:state_enabled="true">
    <shape android:shape="rectangle">
        <gradient  android:centerColor="#6BB3FA" android:startColor="#31EFBC" android:endColor="#6BB3FA" android:type="radial" android:gradientRadius="500dp" ></gradient>

        <corners android:radius="20dp"></corners>
    </shape>
</item>

</selector>